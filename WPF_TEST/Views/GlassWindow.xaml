    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>            
            <controls:MultiViewportSelector x:Name="vierportSelector" Margin="10" Height="Auto" Width="Auto"/>
        </StackPanel>

        <Ellipse Width="500"
