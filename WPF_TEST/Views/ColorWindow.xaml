<Window x:Class="WPF_TEST.Views.ColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TEST.Views"
        xmlns:controls="clr-namespace:WPF_TEST.Controls"
        mc:Ignorable="d"
        Background="#01000000"
        AllowsTransparency="True"
        SnapsToDevicePixels="True"
        WindowStyle="None"
        FontFamily="Segoe UI"        
        Title="ColorWindow" Height="450" Width="800" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <controls:BorderListControl Margin="10" ItemsSource="{Binding ColorBorderList}"/>

        <Border Grid.Row="1" Background="{DynamicResource LightTitleBackground}" CornerRadius="8">
            <!--<TextBlock Text="Color List" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="16" FontWeight="SemiBold"/>-->
        </Border>
    </Grid>
</Window>
