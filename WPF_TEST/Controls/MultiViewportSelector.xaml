<UserControl x:Class="WPF_TEST.Controls.MultiViewportSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_TEST.Controls"
             mc:Ignorable="d">
    
    <StackPanel>
        <Button Width="30" Height="30" Margin="0,0,0,10" Click="Button_Click"/>
        <UniformGrid x:Name="GridLayout" Margin="5" Visibility="Collapsed"/>
        <TextBlock x:Name="LabelLayout" HorizontalAlignment="Center" Margin="5" FontWeight="SemiBold" Foreground="White"/>
    </StackPanel>
</UserControl>
