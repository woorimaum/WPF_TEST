    extends:PasswordExtend.IsPasswordBindable="True" />-->
            <PasswordBox
                Width="100"
                Height="30"
                extends:PasswordExtend.BindablePassword="{Binding UserPW, Mode=TwoWay}"
                extends:PasswordExtend.IsPasswordBindable="True" />
        </WrapPanel>
    </Grid>
</Window>
