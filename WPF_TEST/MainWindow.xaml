                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter
                                            Grid.Column="0"
                                            Margin="6,3,6,3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                                        <Path
                                            x:Name="SortArrow"
                                            Grid.Column="1"
                                            Width="8"
                                            Height="6"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            Data="M0,0 L1,0 0.5,1 z"
                                            Fill="#DDDDDD"
                                            RenderTransformOrigin="0.5,0.4"
                                            Stretch="Fill"
                                            Visibility="Collapsed" />
