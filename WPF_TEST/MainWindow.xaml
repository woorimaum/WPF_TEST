<Window x:Class="WPF_TEST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:WPF_TEST"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"-->
    <!--xmlns:vm="clr-namespace:WPF_TEST.ViewModels"-->
    <!--<Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>-->
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Margin="10"/>
            <Button Content="Click" Margin="10" Width="100" Height="50" Command="{Binding ClickCommand}"/>
            <TextBlock Text="{Binding Result}" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>    
</Window>
