                        <Setter Property="BorderThickness" Value="0,1,1,1" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Foreground" Value="#E7E7E7" />
